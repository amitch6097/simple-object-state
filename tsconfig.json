{
  "compileOnSave": true,
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "module": "CommonJS",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ],
    "target": "ES2017"
  }
}